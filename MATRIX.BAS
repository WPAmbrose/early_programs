DIM FINISH, I, STALL, WTF, X, Y AS INTEGER
DIM Z AS STRING
WIDTH 80, 43
RANDOMIZE TIMER
DO
	RANDOMIZE TIMER
	IF INT(RND(RND(RND)) * 10) = 3 THEN
		RANDOMIZE RND(RND(RND))
		X = INT(RND(RND(RND)) * 79) + 1
		Y = INT(RND(RND(RND)) * 39) + 1
		FINISH = INT(RND(RND(RND)) * (41 - Y))
		STALL = Y + 1
		Z = ""
		FOR Y = Y TO FINISH
			Z = Z + CHR$(SCREEN(Y, X))
		NEXT Y
		FINISH = FINISH + 1
		WTF = 0
		FOR Y = STALL TO FINISH
			WTF = WTF + 1
			LOCATE Y, X
			PRINT MID$(Z, WTF, 1)
			FOR I = 1 TO 500: NEXT I
		NEXT Y
	END IF
	X = INT(RND(RND(RND)) * 79) + 1
	Y = INT(RND(RND(RND)) * 42) + 1
	FINISH = INT(RND(RND(RND)) * (42 - Y))
	FOR Y = Y TO FINISH
		Z = CHR$(INT(RND * 253) + 1)
		IF Z = CHR$(7) OR Z = CHR$(9) OR Z = CHR$(12) THEN Z = CHR$(32)
		LOCATE Y, X
		COLOR 14
		PRINT Z
		FOR STALL = 1 TO 18000: NEXT STALL
		LOCATE Y, X
		COLOR 10
		PRINT Z
	NEXT Y
LOOP UNTIL INKEY$ = CHR$(27)

